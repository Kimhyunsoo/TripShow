<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.mju.capstone.tripshow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="kr.ac.mju.capstone.tripshow.main.TabsActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name="kr.ac.mju.capstone.tripshow.tabs.Tab1_Activity"></activity>
        <activity android:name="kr.ac.mju.capstone.tripshow.tabs.Tab2_Activity"></activity>
        <activity android:name="kr.ac.mju.capstone.tripshow.tabs.Tab3_Activity"></activity>
        <activity android:name="kr.ac.mju.capstone.tripshow.login.LogInOrSignUpActivity"></activity>
        <activity 
            android:name=".login.LoginActivity"
            android:label="@string/login_btn"
            ></activity>
        <activity 
            android:name=".login.SignUpActivity"
            android:label="@string/signup_btn"></activity>
        <activity 
            android:name=".main.IntroActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>