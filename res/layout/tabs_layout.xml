<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/sub_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:background="#F7876D"
        android:cacheColorHint="#00000000"
        android:fadingEdge="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="60dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_sidemenu_profile" >

                    <ImageView
                        android:layout_width="50dip"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="#f9e2b0"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/logout_btn"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_logout_btn" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:src="@drawable/dot_line" />

            <LinearLayout
                android:id="@+id/sidemenu_mypage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_sidemenu_mypage" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:text="My Page"
                    android:textColor="#f9e2b0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_sidemenu_message" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:text="Message"
                    android:textColor="#f9e2b0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_friends"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_sidemenu_friends" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:text="Friends"
                    android:textColor="#f9e2b0"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sidemenu_settings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:src="@drawable/icon_sidemenu_setting" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:text="Settings"
                    android:textColor="#f9e2b0"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/contents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#F7876D"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/slide_menu_btn"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical|left"
                android:background="@drawable/icon_list_btn"
                android:contentDescription="@string/img_desc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.63"
                android:src="@drawable/img_home_top" />

            <ImageButton
                android:id="@+id/search_btn"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/icon_search_btn"
                android:contentDescription="@string/img_desc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_search"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="#0000ff"
            android:visibility="gone" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="검색어 입력" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색" />
        </LinearLayout>

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/black" >
                    </FrameLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="#F7876D" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="3dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tab1_indicator"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#000000" />

                        <TextView
                            android:id="@+id/tab2_indicator"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#000000" />

                        <TextView
                            android:id="@+id/tab3_indicator"
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#000000" />
                    </LinearLayout>

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:tabStripEnabled="false" >
                    </TabWidget>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/notice_list_left_slidingbar"
                android:layout_height="fill_parent"
                android:layout_width="90dip"
                android:background="@android:color/transparent"
                android:clickable="false"
                />
        </TabHost>
    </LinearLayout>

</RelativeLayout>